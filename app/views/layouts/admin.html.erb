<div class="container">
<div class="row">
<div class="col-md-8">

<div class="form-group">
<%= form_for (@course) do |form| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :course_name, class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image, id: :course_image, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :course_description, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :curriculum %>
    <%= form.text_area :curriculum, id: :course_curriculum, class: "form-control"%>
  </div>
<br /><br />
<div class="actions">
 <% if params[:id].nil? %>
 <%= form.submit "Add Course",  class: "btn btn-primary" %>
     <% else %>
     <%= form.submit "Update Course", class: "btn btn-primary" %>
     <% end %>
 </div>
<% end %>
</div>
</div>
</div>
</div>
<script type="text/javascript">
  CKEDITOR.replace('course_description');


  CKEDITOR.replace('course_curriculum');

  
</script>

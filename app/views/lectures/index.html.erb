<p id="notice"><%= notice %></p>

<h1>Lectures</h1>

<div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Chapter</th>
      <th>Description</th>
      <th>Video url</th>
      <th>Video duration</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.name %></td>
        <td><%= lecture.chapter.name%></td>
        <td><%= lecture.description %></td>
        <td><%= lecture.video_url %></td>
        <td><%= lecture.video_duration %></td>
        <td><%= lecture.course.name %></td>
        <td><%= link_to 'Show', [lecture.chapter.course, lecture.chapter,lecture]  %></td>
        <td><%= link_to 'Edit', edit_course_chapter_lecture_path(lecture.chapter.course, lecture.chapter,lecture) %></td>
        <td><%= link_to 'Destroy', [lecture.chapter.course, lecture.chapter,lecture], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Lecture', new_course_chapter_lecture_path %>
